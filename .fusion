{
  "engine": "scss",
  "publish": "@no-repeat/theme-template",
  "import": {
    "sources": {
      "dir": "lib",
      "entry-file": "lib/index.scss",
      "entries": {}
    },
    "demos": {
      "dir": "demos",
      "entry-file": "index.html",
      "entries": {}
    }
  },
  "variables": {
    "color": "lib/core/lib/style/_color.scss",
    "corner": "lib/core/lib/style/_corner.scss",
    "font": "lib/core/lib/style/_font.scss",
    "icon": "lib/core/lib/style/_icon.scss",
    "line": "lib/core/lib/style/_line.scss",
    "shadow": "lib/core/lib/style/_shadow.scss",
    "size": "lib/core/lib/style/_size.scss",
    "button": "lib/button/lib/scss/variable.scss"
  },
  "styles": {
    "color": [{}],
    "croner": [{}],
    "font": [{}],
    "icon": [{}],
    "line": [{}],
    "shadow": [{}],
    "size": {
      "max": 50,
      "base": "$size-base"
    }
  },
  "components": [
    {
      "name": "color",
      "description": "颜色",
      "type": "style",
      "var-prefix": "$color-",
      "class-prefix": "next-color"
    },
    {
      "name": "corner",
      "description": "边角",
      "type": "style",
      "var-prefix": "$corner-",
      "class-prefix": "next-corner"
    },
    {
      "name": "font",
      "description": "字体",
      "type": "style",
      "var-prefix": "$font-",
      "class-prefix": "next-font"
    },
    {
      "name": "icon",
      "description": "图标",
      "type": "style",
      "var-prefix": "$icon-",
      "class-prefix": "next-icon"
    },
    {
      "name": "line",
      "description": "线条",
      "type": "style",
      "var-prefix": "$line-",
      "class-prefix": "next-line"
    },
    {
      "name": "shadow",
      "description": "阴影",
      "type": "style",
      "var-prefix": "$shadow-",
      "class-prefix": "next-shadow"
    },
    {
      "name": "size",
      "description": "尺寸",
      "type": "style",
      "var-prefix": "$size-",
      "class-prefix": "next-size"
    },
    {
      "name": "button",
      "description": "按钮",
      "type": "component",
      "var-prefix": "$btn-",
      "class-prefix": "next-btn"
    }
  ]
}